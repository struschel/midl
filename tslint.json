{
    "defaultSeverity": "error",
    "extends": [
        "tslint:latest",
        "tslint-eslint-rules"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules"
        ]
    },
    "rules": {
        "no-var-keyword": true,
        "no-constant-condition": true,
        "no-console": false,
        "object-curly-spacing": true,
        "object-literal-sort-keys": false,
        "readonly-keyword": true,
        "no-eval": true,
        "no-parameter-reassignment": true,
        "no-loop-statement": true,
        "no-object-mutation": true,
        "no-delete": true,
        "no-method-signature": true,
        "indent": [
            true,
            "spaces",
            4
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "curly": [
            true,
            "ignore-same-line"
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "typedef": [
            true,
            "call-signature"
        ]
    },
    "rulesDirectory": [
        "node_modules/tslint-eslint-rules/dist/rules"
    ]
}